{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "target": "ES2017",
    "types": [
      "node",
      "jest",
    ],
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "lib": [
      "es6",
      "es7",
      "es2017",
      "ES2020",
      "DOM"
    ],
    "baseUrl": "./",
  },
  "exclude": [
    "node_modules"
  ]
}